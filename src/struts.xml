<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
   "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
   "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
  
   <constant name="struts.enable.SlashesInActionNames" value="true"/>
   <constant name="struts.mapper.alwaysSelectFullNamespace" value="false"/>
   <constant name="struts.patternMatcher" value="regex"/>
   <bean type="com.opensymphony.xwork2.factory.ActionFactory"  class="org.metamorphosis.core.ActionFactory" />
	
   <package name="root" namespace="/" extends="tiles-default">
   
    <interceptors>
        <interceptor name="moduleInterceptor" class="org.metamorphosis.core.ModuleInterceptor"/>
        <interceptor-stack name="moduleStack">
          <interceptor-ref name="moduleInterceptor"/>
          <interceptor-ref name="defaultStack"/>
        </interceptor-stack>
     </interceptors>
     
     <default-interceptor-ref name="moduleStack"/>
     
     <default-class-ref class="org.metamorphosis.core.ActionSupport" />
     
     <action name="index" class="org.metamorphosis.core.WelcomeAction">
        <result type="tiles">index</result>
     </action>
     
     <action name="login">
        <result type="tiles">login</result>
     </action>
     
     <action name="password/reset">
        <result type="tiles">password/reset</result>
     </action>
     
     <action name="password/change">
        <result type="tiles">password/change</result>
     </action>
     
     <action name="contact" class="org.metamorphosis.core.ContactAction" method="sendMail"/>
     
     <action name="newsletter" class="org.metamorphosis.core.ContactAction" method="subscribe"/>
     
      <action name="{module}" method="navigate">
	      	<exception-mapping exception="org.apache.tiles.definition.NoSuchDefinitionException"
	        result="error" />
            <result name="success" type="tiles">{1}</result>
            <result name="error" type="redirect">/</result>
      </action>
       
   </package>
    
</struts>